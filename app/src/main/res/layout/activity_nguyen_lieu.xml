<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".View.TongQuan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tenNguyenLieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Nhập tên nguyên liệu"
            android:inputType="text"
            android:paddingHorizontal="5sp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/soLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Nhập số lượng"
            android:inputType="text"
            android:paddingHorizontal="5sp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="140sp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:fontFamily="monospace"
                android:padding="5sp"
                android:text="Đơn vị đo"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/donViDo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:padding="5sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:background="#F5F5F5"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/hanSuDung"
                android:layout_width="205sp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:padding="5sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:padding="5sp"
                android:text="Hạn sử dụng"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:background="#3C3D37"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Danh sách"
                android:textAlignment="center"

                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0sp"
                android:layout_height="45sp"
                android:layout_weight="0.5"
                android:background="#F5F5F5"
                app:srcCompat="@drawable/update_icon"
                tools:srcCompat="@drawable/update_icon" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0sp"
                android:layout_height="45sp"
                android:layout_weight="0.4"
                android:background="#F5F5F5"
                app:srcCompat="@drawable/plus"
                tools:srcCompat="@drawable/Plus" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="#EFE7E7"
            android:paddingHorizontal="5sp"
            android:paddingTop="10sp"

            />
    </LinearLayout>

</LinearLayout>