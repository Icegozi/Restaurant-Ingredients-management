<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".View.TongQuan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tenNguyenLieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Nhập tên nguyên liệu"
            android:inputType="text"
            android:paddingHorizontal="5sp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/soLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Nhập số lượng"
            android:inputType="text"
            android:paddingHorizontal="5sp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginHorizontal="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="monospace"
                android:padding="5sp"
                android:text="Đơn vị đo"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/donViDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:padding="5sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:background="#F5F5F5"
            android:layout_margin="10sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/hanSuDung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Hạn sử dụng"
                android:textSize="18sp"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F5F5F5"
                android:src="@drawable/date_picker" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/ncc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:padding="5sp"
            android:text="Nhà cung cấp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/spinner"

            android:padding="5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        </LinearLayout>

        <EditText
            android:id="@+id/ptGiaTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:layout_marginTop="10sp"
            android:hint="Nhập giá tiền"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:background="#3C3D37"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Danh sách"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#F5F5F5"
                app:srcCompat="@drawable/settings"
                tools:srcCompat="@drawable/settings" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="#F5F5F5"
                android:paddingHorizontal="10sp"
                app:srcCompat="@drawable/baseline_add_24"
                tools:srcCompat="@drawable/baseline_add_24" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="@drawable/edittext_border"
            android:paddingHorizontal="5sp"
            android:paddingTop="10sp"

            />
    </LinearLayout>

</LinearLayout>