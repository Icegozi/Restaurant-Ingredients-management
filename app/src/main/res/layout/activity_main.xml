<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resolved_background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="#FAF09F"
        android:backgroundTint="#FAF09F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="BÁO CÁO THÍ NGHIỆM THỰC NGHIỆM"
                android:textAlignment="center"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingBottom="4dp"
                android:text="MÔN HỌC: Phát triển ứng dụng trên thiết bị di động"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingBottom="4dp"
                android:text="GVHD: Ts. Vũ Thi Dương"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingBottom="4dp"
                android:text="ĐỀ TÀI: Ứng dụng quản lý kho và nguyên liệu Nhà hàng"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingBottom="12dp"
                android:text="THÀNH VIÊN: Hà Xuân Phúc, Hoàng Thị Cúc"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3C3D37"
                android:backgroundTint="#3C3D37"
                android:fontFamily="monospace"
                android:paddingBottom="8dp"
                android:text="CHỨC NĂNG CHÍNH"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingBottom="4dp"
                android:text="- Quản lý danh sách nguyên liệu với số lượng hiện có và hạn sử dụng."
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingBottom="4dp"
                android:text="- Cảnh báo khi số lượng nguyên liệu thấp hoặc gần hết hạn."
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingBottom="4dp"
                android:text="- Quản lý nhập/xuất nguyên liệu theo từng lần sử dụng."
                android:textColor="#666666"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="Bức hình minh họa"

                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nhahang" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
